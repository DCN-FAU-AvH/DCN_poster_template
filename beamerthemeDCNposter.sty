%%%%%%%%%%%% COLOR DEFINITION %%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
% Define the theme colors
\usepackage{xcolor}
\definecolor{dcnorange}{RGB}{255, 102, 0}
\definecolor{dcngreen}{RGB}{38, 159, 120}
\definecolor{dcnblue}{RGB}{11, 62, 117}
\definecolor{dcngrey}{RGB}{102, 102, 102}

\setbeamercolor*{block title}{fg=dcngrey,bg=white}
\setbeamerfont{block title}{size=\large}
\setbeamercolor*{block body}{fg=black,bg=white}
\setbeamerfont{block body}{size=\normalsize}

\setbeamercolor{structure}{fg=dcnblue}  % color of the itemization symbols, etc. 

%%%%%%%%%%%% BLOCK DEFINITION %%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
% used for main text and titles with green bars

\setbeamertemplate{block begin}{
